{
  "$schema": "../node_modules/@tauri-apps/cli/schema.json",
  "build": {
    "beforeDevCommand": "pnpm run dev",
    "beforeBuildCommand": "pnpm run build",
    "devPath": "http://localhost:1420",
    "distDir": "../build"
  },
  "package": {
    "productName": "Right Now",
    "version": "0.0.0"
  },
  "tauri": {
    "allowlist": {
      "notification": {
        "all": true
      },
      "window": {
        "startDragging": true
      },
      "shell": {
        "open": true
      }
    },
    "bundle": {
      "active": true,
      "targets": "all",
      "identifier": "com.colelawrence.rightnow",
      "macOS": {
        "entitlements": null,
        "exceptionDomain": "",
        "frameworks": [],
        "providerShortName": null,
        "signingIdentity": null
      },
      "longDescription": "Synchronous personal to-do list",
      "shortDescription": "ADHD Todo list",
      "icon": ["icons/32x32.png", "icons/128x128.png", "icons/128x128@2x.png", "icons/icon.icns", "icons/icon.ico"]
    },
    "security": {
      "csp": null
    },
    "windows": [
      {
        "label": "main",
        "url": "/tracker-planner-window",
        "width": 800,
        "height": 800,
        "fullscreen": false,
        "resizable": true,
        "alwaysOnTop": true,
        "title": "Right Now",
        "titleBarStyle": "Overlay",
        "hiddenTitle": true
      },
      {
        "label": "tray",
        "url": "/tray",
        "width": 400,
        "height": 600,
        "title": "Right Now",
        "titleBarStyle": "Overlay",
        "hiddenTitle": true,
        "resizable": false,
        "visible": false,
        "focus": false
      }
    ],
    "systemTray": {
      "iconPath": "icons/tray-base.png",
      "iconAsTemplate": true,
      "menuOnLeftClick": false
    }
  }
}
